
<%- include ../partials/head.ejs %>
<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %>Contact</h1>

            <form action="" class="form" method="POST">
                <div class="form-group">
                    <label for="FirstNameTextField">Contact Name</label>
                    <input type="text" class="form-control" 
                    id="FirstNameTextField" 
                    placeholder="Enter Contact Name"
                    name="firstName" 
                    value="<%= contact.firstName %>"
                    required>
                </div>

               

                <div class="form-group">
                    <label for="ContactNumberTextField">Contact Number</label>
                    <input type="tel" class="form-control" 
                    id="ContactNumberTextField" 
                    placeholder="Enter Contact Number"
                    name="contactNumber" 
                    value="<%= contact.contactNumber %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="emailAddressTextField">Email Address</label>
                    <input type="text" class="form-control" 
                    id="emailAddressTextField" 
                    placeholder="Enter Email Address"
                    name="emailAddress" 
                    value="<%= contact.emailAddress %>"
                    required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> <%= title %></button>
                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"> Cancel</i></a>

            </form>
            
        </div>
    </div>
</div>

<!-- Bottom components -->
<%- include ../partials/scripts.ejs %>
<%- include ../partials/footer.ejs %>
<%- include ../partials/bottom.ejs %>